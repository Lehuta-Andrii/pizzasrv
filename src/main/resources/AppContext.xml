<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">






	<bean name="orderService" class="org.study.pizzaservice.SimpleOrderService">
		<constructor-arg ref="pizzaRepository" />
		<constructor-arg ref="orderRepository" />
	</bean>

	<bean id="customer" class="org.study.pizzaservice.domain.Customer">
		<constructor-arg value="hh;" />
	</bean>
	<bean id="name" class="java.lang.String">
		<constructor-arg value="Some name" />
	</bean>

	<bean factory-bean="createPizzaService" factory-method="createPizza">
		<constructor-arg index="0">
			<ref parent="name" />
		</constructor-arg>
		<constructor-arg index="1" value="34.5" />
		<constructor-arg index="2" value="MEAT" />
	</bean>




</beans>