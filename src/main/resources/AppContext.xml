<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean name="pizzaRepository"
		class="org.study.pizzaservice.repository.InMemPizzaRepository"
		init-method="cookPizzas" />
	<bean name="orderRepository"
		class="org.study.pizzaservice.repository.InMemOrderRepository"/>

	<bean name="orderService"
		class="org.study.pizzaservice.SimpleOrderService">
		<constructor-arg ref = "pizzaRepository" />
		<constructor-arg ref = "orderRepository" />
	</bean>


</beans>