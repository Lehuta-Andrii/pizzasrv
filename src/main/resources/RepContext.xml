<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean class = "org.study.pizzaservice.infrastructure.BeanchMarkProxyBeanPostProcessor" />


	<bean name="orderRepository"
		class="org.study.pizzaservice.repository.InMemOrderRepository" />



	<bean name="pizzaRepository"
		class="org.study.pizzaservice.repository.InMemPizzaRepository"
		init-method="cookPizzas">
		<property name="pizzas">
			<list>
				<bean class="org.study.pizzaservice.domain.Pizza">
					<constructor-arg index="0" value="one" />
					<constructor-arg index="1" value="34.5" />
					<constructor-arg index="2" value="MEAT" />
				</bean>
				<bean class="org.study.pizzaservice.domain.Pizza">
					<constructor-arg index="0" value="two" />
					<constructor-arg index="1" value="34.5" />
					<constructor-arg index="2" value="MEAT" />
				</bean>
				<bean class="org.study.pizzaservice.domain.Pizza">
					<constructor-arg index="0" value="three" />
					<constructor-arg index="1" value="34.5" />
					<constructor-arg index="2" value="MEAT" />
				</bean>
			</list>
		</property>
	</bean>



	<bean name="createPizzaService" class="org.study.pizzaservice.CreatePizzaService" />

	<bean id="name" class="java.lang.String">
		<constructor-arg value="Other name" />
	</bean>

<!-- 	<bean id="customer" class="org.study.pizzaservice.domain.Customer" primary="true"> -->
<!-- 		<constructor-arg value="hhlll1" /> -->
<!-- 	</bean> -->



</beans>